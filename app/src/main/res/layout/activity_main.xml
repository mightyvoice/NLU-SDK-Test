<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_height="fill_parent" >
            <Button
                android:id="@+id/cloudRecognizerButton"
                android:text="@string/Cloud_Recognizer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/nluCloudRecognizerButton"
                android:text="@string/Nlu_Cloud_Recognizer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/cloudVocalizerButton"
                android:text="@string/Cloud_Vocalizer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/uploadContactButton"
                android:text="Upload Contacts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cloudRecognizer"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button
        android:id="@+id/startTextRecognitionButton"
        android:text="@string/Start_Recognition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/textForRecognitionView"
        android:scrollbars = "vertical"
        android:hint="@string/Recognition_Results_Hint"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textRecognitionResultView"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"/>
    <!--<ListView android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" android:gravity="top"-->
        <!--android:id="@+id/textRecognitionAmbiguityListView">-->
    <!--</ListView>-->

</LinearLayout>
